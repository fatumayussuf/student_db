doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Student Registration
        link(rel="stylesheet", href="output.css")
    body 
        main(class="bg-slate-600 text-white min-h-screen flex items-center justify-center")
            div(class="container mx-auto p-6 bg-blue-700 rounded-lg shadow-lg")
                h1(class="text-3xl font-bold text-center mb-6") Student Registration 
                div(class="grid lg:grid-cols-2 gap-6")
                    //- Form
                    form(action="/", method="post", class="bg-black rounded-lg shadow-md p-6 space-y-4")
                        div
                            label(for="first-name", class="block font-semibold text-gray-700") First name 
                            input(type="text", name="first-name", class="block bg-gray-100 px-4 py-2 rounded-md text-black mt-1 w-full")
                        div
                            label(for="last-name", class="block font-semibold text-gray-700") Last name 
                            input(type="text", name="last-name", id="last-name", class="block bg-gray-100 px-4 py-2 rounded-md text-black mt-1 w-full") 
                        div
                            label(for="age", class="block font-semibold text-gray-700") Age 
                            input(type="text", name="age", id="age", class="block bg-gray-100 px-4 py-2 rounded-md text-black mt-1 w-full") 
                        div 
                            label(for="phone", class="block font-semibold text-gray-700") Phone
                            input(type="text", name="phone", id="phone", class="block bg-gray-100 px-4 py-2 rounded-md text-black mt-1 w-full") 
                        div
                            label(for="email", class="block font-semibold text-gray-700") Email
                            input(type="email", name="email", id="email", class="block bg-gray-100 px-4 py-2 rounded-md text-black mt-1 w-full") 
                        div
                            label(for="gender", class="block font-semibold text-gray-700") Gender 
                            select(name="gender", class="block w-full bg-gray-100 px-4 py-2 rounded-md text-black mt-1")
                                option(value="") --Please select a gender--
                                option(value="male") Male
                                option(value="female") Female
                        div
                            label(for="address", class="block font-semibold text-gray-700") Address 
                            input(type="text", name="address", class="block bg-gray-100 px-4 py-2 rounded-md text-black mt-1 w-full") 
                        div 
                            label(for="programming", class="inline-flex items-center")
                                input(type="checkbox", name="unit", value="programming", id="programming", class="mr-2")
                                | Programming
                        div 
                            label(for="design", class="inline-flex items-center")
                                input(type="checkbox", name="unit", value="design", id="design", class="mr-2")
                                | Design
                        div 
                            label(for="maths", class="inline-flex items-center")
                                input(type="checkbox", name="unit", value="maths", id="maths", class="mr-2")
                                | Maths
                        div 
                            label(for="chemistry", class="inline-flex items-center")
                                input(type="checkbox", name="unit", value="chemistry", id="chemistry", class="mr-2")
                                | Chemistry
                        button(type="submit", class="w-full bg-green-400 hover:bg-green-600 transition ease-in-out duration-300 px-8 py-3 rounded-md font-semibold text-white") Enroll Student 

                //- Display list
                div(class="mt-8")
                    if students.length
                        ul(class="list-disc pl-5")
                            each student in students
                                li(class="text-gray-900")= student.first_name
                    else 
                        div(class="w-full h-full grid place-items-center")
                            div 
                                p(class="text-xl text-gray-900") Students will be displayed here 
                                img(src="", alt="", class="mt-2")
